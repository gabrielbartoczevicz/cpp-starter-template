{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build root C++ file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${workspaceFolder}/src/*cpp",
        "-o",
        "${workspaceFolder}/dist/build.out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}